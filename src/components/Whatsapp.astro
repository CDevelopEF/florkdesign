---
// src/components/WhatsAppButton.astro
import whats from '../assets/whats.svg'
const whatsappLink = "https://wa.me/5358477556"; // Reemplaza con tu enlace de WhatsApp
---

<a href={whatsappLink} class="whatsapp-button" target="_blank" rel="noopener noreferrer">
  <img src={whats.src} alt="Chat en WhatsApp" style="fill: white; color: white"/>
</a>

<style>
  .whatsapp-button {
    position: fixed;
    bottom: 20px;
    right: 20px;
    z-index: 1000;
    background-color: #036928; /* Color de WhatsApp */
    border-radius: 50%;
    padding: 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease;
    fill: white;
  }

  .whatsapp-button:hover {
    transform: scale(1.1);
  }

  .whatsapp-button img {
    width: 50px;
    height: 50px;
    fill: white;
  }
</style>