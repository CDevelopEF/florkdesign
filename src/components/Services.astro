---
// Importa los componentes necesarios
import Header from '../components/Header.astro';
const PATH = `/florkdesign/`
---

<html>
  <head>
    <title>Mi Negocio de Sublimación</title>
    <style>
      /* Estilos globales */
      body {
        font-family: 'Open Sans', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #F7FFF7;
        color: #2F2F2F;
      }

      .services {
        padding: 60px 20px;
        max-width: 1200px;
        margin: 0 auto;
        text-align: center;
      }

      .services-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #FF6B6B;
        margin-bottom: 20px;
      }

      .services-description {
        font-size: 1.25rem;
        margin-bottom: 40px;
      }

      .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
      }

      .service-card {
        background-color: #FFFFFF;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
      }

      .service-card:hover {
        transform: translateY(-10px);
      }

      .service-card img {
        max-width: 100%;
        border-radius: 10px;
        margin-bottom: 15px;
      }

      .service-card h3 {
        font-size: 1.5rem;
        font-weight: 600;
        color: #2F2F2F;
        margin-bottom: 10px;
      }

      .service-card p {
        font-size: 1rem;
        color: #555555;
      }

      .services-button {
        background-color: #FFE66D;
        color: #2F2F2F;
        padding: 12px 24px;
        border: none;
        border-radius: 5px;
        font-size: 1rem;
        cursor: pointer;
        margin-top: 40px;
        transition: background-color 0.3s ease;
      }

      .services-button:hover {
        background-color: #FFD700;
      }
    </style>
  </head>
  <body>
    <!-- Sección Hero (ya la tienes) -->
    <section class="hero">
      <!-- Contenido de la Sección Hero -->
    </section>

    <!-- Sección de Servicios -->
    <section class="services">
      <h2 class="services-title">Nuestros Servicios de Sublimación</h2>
      <p class="services-description">Personalizamos tazas, playeras, gorras y más con diseños únicos y duraderos.</p>
      <div class="services-grid">
        <!-- Tarjeta 1: Playeras -->
        <div class="service-card">
          <img src=`${PATH}/pullover.png` alt="Playeras personalizadas"  width="350px" height="350px" />
          <h3>Pullovers Personalizados</h3>
          <p>Diseños únicos para eventos, empresas o regalos.</p>
        </div>
        <!-- Tarjeta 2: Tazas -->
        <div class="service-card">
          <img src=`${PATH}/taza.png` alt="Tazas personalizadas"  width="350px" height="350px"/>
          <h3>Tazas Personalizadas</h3>
          <p>Ideales para regalos corporativos o personales.</p>
        </div>
        <!-- Tarjeta 3: Gorras -->
        <div class="service-card">
          <img src=`${PATH}/gorra.png` alt="Gorras personalizadas" width="350px" height="350px" />
          <h3>Gorras Personalizadas</h3>
          <p>Personalización de gorras con tu diseño favorito.</p>
        </div>
      </div>
      <button class="services-button">Ver todos los servicios</button>
    </section>

  </body>
</html>